{
  "name": "@hotina/shimmerjs",
  "version": "1.0.0",
  "description": "Biblioteca de efeitos shimmer e glass para CSS/SCSS",
  "main": "dist/index.js",
  "style": "dist/shimmer.css",
  "sass": "src/shimmer.scss",
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "sass src/shimmer.scss dist/shimmer.css --style compressed",
    "build:css:dev": "sass src/shimmer.scss dist/shimmer.css --style expanded",
    "build:js": "esbuild src/index.js --bundle --format=esm --outfile=dist/index.js --minify",
    "build:js:dev": "esbuild src/index.js --bundle --format=esm --outfile=dist/index.js",
    "watch": "npm run watch:css & npm run watch:js",
    "watch:css": "sass src/shimmer.scss dist/shimmer.css --watch",
    "watch:js": "esbuild src/index.js --bundle --format=esm --outfile=dist/index.js --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "shimmer",
    "glass",
    "rainbow",
    "css",
    "scss",
    "animation",
    "effects",
    "apple-intelligence"
  ],
  "author": "Hotina Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hotina/shimmerjs.git"
  },
  "bugs": {
    "url": "https://github.com/hotina/shimmerjs/issues"
  },
  "homepage": "https://github.com/hotina/shimmerjs#readme",
  "files": [
    "dist/",
    "src/",
    "README.md"
  ],
  "devDependencies": {
    "esbuild": "^0.25.8",
    "sass": "^1.69.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
